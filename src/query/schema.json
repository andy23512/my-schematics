{
  "$schema": "http://json-schema.org/schema",
  "id": "my-schematics-query",
  "title": "GraphQL Service Schematic query schematic",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the query service.",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the service.",
      "visible": false
    }
  },
  "required": ["name"]
}
